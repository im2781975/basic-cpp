/*arr is: 40 50 60 70 80 90 
0 10 20
19 11 19
37 12 18
54 13 17

4 3 2 1 0 
5 4 3 2 1 */
#include <iostream>
using namespace std;
void print_arr()
{
    
    int arr[]{40,50,60,70,80,90};
    cout<<"arr is: ";
    for (auto element: arr)
        cout << element << " ";
        
}

void condition()
{
    for (int i=0,j=10,k=20;(i+j+k) <100;j++,k--,i += k)
    {
        cout << i << " " << j << " " << k << "\n";
    }
}

void loop()
{
      int i=5;
      while(i--)
      {
      cout<<i<<" ";
      }
      cout<<"\n";
      
      i=5;
      while(i){
      cout<<i<<" ";
      i--;
    }
}
int main()
{
    print_arr();
    cout<<"\n";
    
    condition();
    cout<<"\n";
    
    loop();
}
