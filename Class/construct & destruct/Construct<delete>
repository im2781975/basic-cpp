#include<bits/stdc++.h>
using namespace std;
class A {
    int a;
public:
    int* ptr;
    A()
    {
        cout << "Constructor was Called!"<<"\n";
    }
    ~A()
    {
        cout << "Destructor was Called!"<<"\n";
    }
};
int main()
{
//Create an object of class A using new operator
    A* a = new A;
    cout<<"Object of class A was created using new operator!"<<"\n";
 
    delete (a);
    cout<<"Object of class A was deleted using delete keyword!"<<"\n";
 
    cout <<"\n";
    A* b = (A*)malloc(sizeof(A));
    cout<<"Object of class A was created using malloc()!"
         <<"\n";
 
    free(b);
    cout<<"Object of class A was deleted using free()!"<<"\n";
    return 0;
}
