//Operator Overloading or Compile-Time Polymorphism
#include<bits/stdc++.h>
using namespace std;
class Complex{
    int real, img;
    public:
    Complex(int real, int img){
        this->real = real;
        this->img = img;
    }
    void print(){
        cout << real << " + i" << img;
    }
    friend Complex operator +(Complex &, Complex &);
};
Complex operator+(Complex &a, Complex &b){
    return Complex(a.real + b.real, a.img + b.img);
}
int main(){
    Complex a(2, 8), b(6, 9);
    Complex c = a + b;
    c.print();
}
