#include <bits/stdc++.h>
using namespace std;
class Dist{
    float feet, inch;
    public:
    Dist(){}
    Dist(float inch, float feet){
        this->inch = inch;
        this->feet = feet;
    }
    void print(){
        cout << "\nFeet: " << feet << " Inch: " << inch;
    }
    Dist operator +(Dist &d){
        Dist c;
        c.feet = this->feet + d.feet;
        c.inch = this->inch + d.inch;
        if(c.inch > 12){
            c.feet += static_cast<int>(c.inch/12);
            c.inch -= static_cast<int>(c.inch/12)*12;
        }
        return c;
    }
};
int main(){
    Dist d(3.9, 4.7);
    Dist e(8.9, 7.9);
    Dist f = d + e;
    d.print();
    e.print();
    f.print();
}
