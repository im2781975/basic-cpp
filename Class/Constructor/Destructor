#include <iostream>
using namespace std;

class Base {
public:
    virtual ~Base() {
        cout << "~Base() is executed" << endl;
    }
};
Base::~Base() // Explicit destructor call
{
    std::cout << "Pure virtual destructor is called";
}
class Derived : public Base {
public:
    ~Derived() {
        cout << "~Derived() is executed" << endl;
    }
};

int main() {
    
    Base* b = new Derived();
    delete b;
    return 0;
}

