#include<bits/stdc++.h>
using namespace std;
class A{
    protected: int a;
    public:
    void setA(){
        cout << "\nValue Of A is: ";
        cin >> a;
    }
    void GetA(){
        cout << "\nValue Of A is: " << a;
    }
};
class B:public A{
    protected: int b;
    public:
    void setB(){
        cout << "\nValue Of B is: ";
        cin >> b;
    }
    void GetB(){
        cout << "\nValue Of B is: " << b ;
    }
};
class C:public B{
    protected:
    int c, product;
    public:
    void setC(){
        cout << "\nValue Of C is: ";
        cin >> c;
    }
    void GetC(){
        cout << "\nValue Of C is: " << c << " ";
    }
    void pro(){
        product = a * b * c;
        cout << "\nproduct Of A, B, C is: " << product;
    }
};
int main(){
    C c;
    c.setA();
    c.setB();
    c.setC();
    c.GetA();
    c.GetB();
    c.GetC();
    c.pro();
}
