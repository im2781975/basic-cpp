#include<iostream>
using namespace std;
  
class A
{
    protected:
         int a;
    
    public:
        void set_A()
            {
                cout<<" Value of A=: "; cin>>a;
             }
  
        void disp_A()
                  {
                   cout<<"\n"<<"Value of A: "<<a;
                  }
};
class B: public A
{
    protected:
        int b;
              
    public:
        void set_B()
            {
                cout<<"Value of B: ";cin>>b;
                
            }
  
        void disp_B()
            {
                cout<<"\n"<<"Value of B :"<<b;
            }
};

class C: public B
{
      int c,p;
        
      public:
          void set_C()
          {
                 cout<<"Value of C :";
                 cin>>c;
           }
           void disp_C()
           {
                 cout<<"\n"<<"Value of C="<<c;
           }
      
            void cal_product()
             {
                   p=a*b*c;
                  cout<<endl<<"Product of "<<a<<" * "<<b<<" * "<<c<<" = "<<p;
              }
};
  
main()
{
      
    C _c;
    _c.set_A();
    _c.set_B();
    _c.set_C();
    _c.disp_A();
    _c.disp_B();
    _c.disp_C();
    _c.cal_product();
    return 0;
}
