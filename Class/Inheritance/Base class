#include <iostream>
using namespace std;

class Base {
    public:
};
class A {
    public:

    A() { cout << "User defined constructor" << "\n"; }
 
    int size;
};
 
class B : public A {
};
// The constructor of A is implicitly called before the constructor of C
class C : public A {
    public:
    C()
    {
        cout << "C Constructor" << endl;
    }
};
 
class D :public C{
    private:
    A a;
    
    public:
    D()
    {
        cout << "D Constructor" << endl;
    }
};

int main()
{
    Base base;
    
    B b;
    C c;
    D d;
 
    return 0;
}
