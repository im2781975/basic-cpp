#include <iostream>
using namespace std;
  
class Base {
private:
    int pvt = 1;
  
protected:
    int prot = 2;
  
public:
    int pub = 3;
  
//function to access private member
    int getPVT() { return pvt; }
};
  
class PublicDerived : public Base {
public:
//function to access protected member from Base
    int getProt() { return prot; }
};
  
int main()
{
    PublicDerived object1;
    cout << "Private : " << object1.getPVT() << "\n";
    cout << "Protected : " << object1.getProt() <<"\n";
    cout << "Public : " << object1.pub << "\n";
    return 0;
}
