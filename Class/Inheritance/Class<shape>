#include <iostream>
using namespace std;

class shape {
public:
    string name;
    int sides;
  
    shape(string name, int sides)
    {
        this->name = name; 
        this->sides = sides;
    }
};

class triangle : public shape 
{
private:
    int base;
    int height;
  
public:
    // shape constructor taking arg
    // from triangle constructor
    triangle(string name, int sides, int base, int height) : shape(name, sides)
    {
        this->base = base;
        this->height = height;
    }
  
    void area()
    {
        cout << "area of triangle: "<< (0.5 * base * height) <<"\n";
    }
    
    void details()
    {
        cout<<"shape is: "<<name<<"\n";
        
        cout << "no. of sides are: " << sides <<"\n";
        cout << "base is: " << base <<"\n";
        cout << "height is: "<< height <<"\n";
        area();
    }
};

class square : public shape {
private:
    int height;
  
public:
    // shape constructor taking arg
    // from square constructor
    square(string name, int sides, int height) : shape(name, sides)
    {
        this->height = height;
    }
  
    void area()
    {
        cout << "area of square: " << (height * height)
             << "\n";
    }
  
    void details()
    {
        cout << "shape is: " << name << "\n";
        cout << "no. of sides are: " << sides << "\n";
        cout << "height is: " << height << "\n";
        area(); 
    }
};
  
int main()
{
    triangle t("triangle",3, 2, 3);
    
    square s("square", 4, 2);
  
    t.details();
    cout<<"\n";
    s.details();
    return 0;
}
