#include<bits/stdc++.h>
using namespace std;
class person
{
    public:
    string name;
    person *father,*mother;
    void print()
    {
        cout<<"Name: "<<name<<"\n"<<"Father name: "<<father->name<<"\n"<<"Mother name: "<<mother->name<<"\n";
    }
};
int main()
{
    person p;
    p.father=new person;
    p.mother=new person;
    p.name="X";
    p.father->name="Y";
    p.mother->name="Z";
    p.print();
}
