#include <bits/stdc++.h>
using namespace std;
class student{
    public:
    static int total;
    student(){
        total += 1;
        
    }
};
int student::total = 0;
int main(){
    //If we Declare all variable consecutively it will print same value.
    //For that Have to declare separetly
    student a;
    cout << "Number of Student: " << a.total << "\n";
    student b;
    cout << "Number of Student: " << b.total << "\n";
    student c;
    cout << "Number of Student: " << c.total << "\n";
}
