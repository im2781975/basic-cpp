// access overridden function using pointer of Base type that points to an object of Derived class
#include <bits/stdc++.h>
using namespace std;
class parent{
    public:
    void print(){
        cout << "Base Class\n";
    }
};
class child:public parent{
    public:
    void print(){
        cout << "child class\n";
    }
};
int main(){
    child c, d;
    parent *ptr = &c;
    ptr->print();
    child::parent *p = &c;
    p->print();
    child *arr = &d;
    arr->print();
}
