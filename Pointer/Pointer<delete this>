#include <iostream>
using namespace std;
class A
{
public:
    void fun()
    {
        cout << "fun() called\n";
        delete this;
    }
};

int main()
{
    A *ptr = new A;
    ptr->fun();
    ptr = nullptr; // Make ptr nullptr to make sure that it's not used again.

    /* And following is Invalid: Undefined Behavior */
    A a;
    a.fun(); // This will cause undefined behavior, don't call fun() on a locally allocated object.

    return 0;
}

