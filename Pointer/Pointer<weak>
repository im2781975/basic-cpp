//working of weak_ptr
#include <iostream>
using namespace std;
#include <memory>
 
class Rectangle {
    int length;
    int breadth;
 
public:
    Rectangle(int l, int b)
    {
        length = l;
        breadth = b;
    }
 
    int area() { return length * breadth; }

 
int main()
{
    shared_ptr<Rectangle> P1(new Rectangle(10, 5));
   
    weak_ptr<Rectangle> P2 (P1);
   
    cout << P1->area() << "\n";
 
    cout <<"Reference count: " <<P1.use_count() << endl;
    return 0;
}
