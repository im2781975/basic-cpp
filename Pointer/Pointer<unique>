// working of unique_ptr
#include <iostream>
#include <memory>
using namespace std;

class Rectangle {
    int length;
    int breadth;
 
    public:
    Rectangle(int l, int b)
    {
        length = l;
        breadth = b;
    }
    int area() { return length * breadth; }
};
 
int main()
{
    unique_ptr<Rectangle> P1(new Rectangle(10, 5));
    cout << P1->area() << "\n";
    
    unique_ptr<Rectangle> P2;
    P2 = move(P1);
 
    cout << P2->area() << "\n";
    return 0;
}
