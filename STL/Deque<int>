// implement Deque 
#include <deque>
#include <iostream>
using namespace std;
 
void showdq(deque<int>&g)
{
    deque<int>::iterator it;
    for (it = g.begin(); it != g.end(); ++it)
        cout <<" "<< *it;
    cout << "\n";
}
 
int main()
{
    deque<int> dq;
    dq.push_back(10);
    dq.push_front(20);
    dq.push_back(30);
    dq.push_front(15);
    cout << "The deque  is : ";
    showdq(dq);
 
    cout << "deque.size() : " << dq.size()<<"\n";
    cout << "deque.max_size() : " << dq.max_size()<<"\n";
 
    cout << "deque.at(2) : " << dq.at(2)<<"\n";
    cout << "deque.front() : " << dq.front()<<"\n";
    cout << "deque.back() : " << dq.back()<<"\n";
 
    cout << "deque.pop_front() : ";
    dq.pop_front();
    showdq(dq);
 
    cout << "deque.pop_back() : ";
    dq.pop_back();
    showdq(dq);
 
    return 0;
}
