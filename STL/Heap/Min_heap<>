#include<iostream> 
#include<algorithm> 
#include<vector> 
using namespace std; 
  
// comparator function to make min heap 
struct greaters{ 
bool operator()(const long& a,const long& b) const{ 
    return a>b; 
} 
}; 
  
int main() 
{ 
    vector<int> vi{15,6,7,9,11,45};
    
    make_heap(vi.begin(),vi.end(), greaters()); 
      
    cout << "The minimum element of heap is : "<<vi.front();
      
} 
