// use of push_heap() func
#include <algorithm>
#include <iostream>
#include <vector>
using namespace std;
 
void print(vector<int> &vc) {
    for (auto i : vc) 
        cout << i << " ";
}
 
int main()
{
    vector <int> vc{20,30,40,10};
   
    make_heap(vc.begin(),vc.end());
    cout << "Initial Heap: ";
    print(vc);
 
    vc.push_back(50);
    cout << "\nHeap just after push_back(): ";
    print(vc);
    push_heap(vc.begin(), vc.end());
  cout << "\nHeap after push_heap(): ";
    print(vc);
   // using pop_heap() function to move the largest element
    // to the end
    
    pop_heap(vc.begin(), vc.end());
    cout << "\nHeap after pop_heap(): ";
    print(vc);
 
    vc.pop_back();
    cout <<"\nHeap after pop_back(): ";
    print(vc);
    return 0;
}
