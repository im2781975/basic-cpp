//working of is_heap() and is_heap_until()
#include <bits/stdc++.h>
using namespace std;
int main()
{
    vector<int> v1{40,30,25,35,15};
 
    vector<int>::iterator it1;

    // using is_heap()
    is_heap(v1.begin(), v1.end())
        ? cout << "The container is heap. " : cout << "The container is not heap";
 
    // is_heap_until() 
    auto it = is_heap_until(v1.begin(), v1.end());
    
    cout << "\nThe heap elements in container are : ";
    for (it1 = v1.begin(); it1 != it; it1++)
        cout << *it1 << " ";
 
    make_heap(v1.begin(), v1.end());

    cout << "\nThe maximum element of heap is : "<<v1.front();
    return 0;
}
