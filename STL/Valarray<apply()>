// apply() and sum()
#include<iostream>
#include<valarray> 
using namespace std;
int main()
{
    valarray<int> varr = { 10, 2, 20, 1, 30 };
    valarray<int> varr1 ;
     
    // Using apply() to increment all elements by 5
    varr1 = varr.apply([](int x){return x=x+5;});

    cout << "New valarray with manipulated values is : ";
    for (int &x: varr1) cout << x << " ";
     
    cout << "\nSum of old valarray is : " <<varr.sum();

    cout << "\nSum of new valarray is : "<<varr1.sum();
 
    return 0;
     
}
