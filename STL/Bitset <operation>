// show the different operator functions on bitset
#include <bitset>
#include <iostream>
 
using namespace std;
 
int main()
{
  
    bitset<4> bitset1("1001"), bitset2("1010"),result;
 
    cout <<"Bitset1: "<<bitset1<<"\n"<< "Bitset2: "<< bitset2<<"\n" <<result<<"\n";
 
    cout << "Accessing bit value at index 1 of bitset1: "
         << bitset1[1] << "\n";
 
    // bitwise AND
    cout << "Bitwise AND using &: "
         << (result = bitset1 & bitset2) << "\n";
    cout << "Bitwise AND using &=: " << (bitset1 &= bitset2)
         << "\n";
 
    // bitwise OR
    bitset1 = 9; 
    cout << "Bitwise OR using &: "
         << (result = bitset1 | bitset2) << "\n";
    cout << "Bitwise OR using &=: " << (bitset1 |= bitset2)
         << "\n";
 
    // bitwise NOT
    cout << "Bitwise NOT: " << (result = ~bitset1) <<"\n";
 
    // bitwise XOR
    bitset1 = 9;
    cout << "Bitwise XOR: " << (bitset1 ^= bitset2) <<"\n";
 
    bitset1 = 9;
    cout << "Binary leftshift on bitwise1: "<< (bitset1 <<= 1) << "\n";
    
    bitset1 = 9;
    cout << "Binary rightshift on bitwise1: "<< (bitset1 >>= 1) << "\n";
 
    return 0;
}
