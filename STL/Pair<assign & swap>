//function in pair
#include <iostream>
#include <utility>
using namespace std;
 
int main()
{
    pair<int, char> P;
    pair<string, double> Q("abcdefg", 1.23);
    pair<string, double> R;
 
    P.first = 100;
    P.second = 'G';
 
    R = make_pair("Abcdefg is Best", 4.56);
 
    cout <<"\nP.first: "<<P.first << "__"<< "P.second: "<<P.second ;
 
    cout <<"\nQ.first: "<<Q.first << "__"<< "Q.second: "<<Q.second ;
 
    cout <<"\nR.first: "<<R.first << "__"<< "R.second: "<<R.second ;
 
    pair<string, double> S("GeeksForGeeks", 1.23);
 
    cout <<"\nS.first: "<<S.first << "__"<< "S.second: "<<S.second ;
    
    pair<string, int> A;
    A = make_pair(string("Geeks"), 1);
    pair<string, int> B("Quiz",3);
    pair<string, int> C(B);
    pair<int, int> D(5, 10);
 
    
    B.first = ".com";
    B.second = 2;
 
    cout <<"\nA.first: "<<A.first << "__"<< "A.second: "<<A.second ;
 
    cout <<"\nB.first: "<<B.first << "__"<< "B.second: "<<B.second <<"This pair was initialized as a copy of pair B";
 
    cout <<"\nC.first: "<<C.first << "__"<< "g3.second: "<<C.second <<"The values of this pair were changed after initialization." ;
         
    cout <<"\nD.first: "<<D.first << "__"<< "D.second: "<<D.second <<"made for showing addition. The sum of the values in this pair is "
         << D.first + D.second ;
 
    cout << "\nConcatenation of the value first value of g1, g2 & g3 is: "<< A.first + C.first + B.first ;
    
    cout << "\nBefore swapping, "
         << "g1 has " << A.first << " and g2 has "
         << B.first << "\n";
         
    cout << "\nWe can also swap pairs (but type of pairs should be same) : " ;
    
    swap(A, B);
    cout << "After swapping, "
         << "g1 has " << A.first << " and g2 has "
         << B.first;
    
}
