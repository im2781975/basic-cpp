//working of swap()
#include<iostream>
#include<valarray> 
using namespace std;
int main()
{
    valarray<int>varr1{1, 2, 3, 4};
    valarray<int>varr2{2, 4, 6, 8};
     
    cout << "\n1st valarray before swapping are :";
    for (int &x : varr1)
        cout << x << " ";

    cout << "\n2nd valarray before swapping are :";
    for (int &x : varr2)
        cout << x << " ";
 
    varr1.swap(varr2);
 
    cout << "\n1st valarray after swapping are : ";
    for (int &x : varr1)
        cout << x << " ";
 
    cout << "\n2nd valarray after swapping are : ";
    for (int &x : varr2)
        cout << x << " ";
 
    return 0;
}
