//push_front(), emplace_front() and pop_front(),remove(),remove_if()
#include <forward_list>
#include <iostream>
using namespace std;
 
int main()
{
    forward_list<int> flist = { 10, 20, 30, 40, 50 };
 
    flist.push_front(60);
 
    cout<< "Forward list after push_front : ";
    for (int& c : flist)
        cout << c << " ";
 
    flist.emplace_front(70);
 
    cout << "\nForward list after emplace_front : ";
    for (int& c : flist)
        cout << c << " ";

    flist.pop_front();
 
    cout << "\nForward list after pop_front operation : ";
    for (int& c : flist)
        cout << c << " ";
        
// Removes all occurrences of 40
    flist.remove(40);
 
    cout << "\nForward list after remove() : ";
    for (int& c : flist)
        cout << c << " ";
 
    flist.remove_if([](int x) { return x > 20; });
 
    cout << "\nForward list after remove_if  : ";
    for (int& c : flist)
        cout << c << " ";
 
    return 0;
}
