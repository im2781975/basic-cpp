/*//Bubble sort
->idx=0 1 2 3 4 5
7 2 13 2 11 4 */
#include<bits/stdc++.h>
using namespace std;
void print_arr(int arr[])
{
    for(int i=0; i<6; i++)
    {
        cout<<arr[i]<<" ";
    }
}
int main()
{
    int arr[]= {7,2,13,2,11,4};
    for(int i=0; i<5; i++)
    {
        for(int j=i+1; j<6; j++)
        {
            if(arr[i]>arr[j])
                swap(arr[i],arr[j]);
        }
        print_arr(arr);
        cout<<endl;
    }
}
