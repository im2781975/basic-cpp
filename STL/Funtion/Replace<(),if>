// using std::replace
#include <bits/stdc++.h>
using namespace std;

 bool IsOdd(int i)
{ 
  return ((i % 2) == 1); 
}
int main()
{
    int arr[]{ 10, 20, 30, 30, 20, 10, 10, 20 };
    int n = sizeof(arr) / sizeof(arr[0]);

    int old_val = 20, new_val = 99;
 
    cout <<"Before replace arr[]:";
    for (int i = 0; i < n; i++)
        cout << ' ' << arr[i];
 
    replace(arr, arr + n, old_val, new_val);

    cout<<"\nAfter replace arr[]:";
    for (int i = 0; i < n; i++)
        cout << ' ' << arr[i];
 
   //replace_if
    replace_if(arr, arr + n, IsOdd, new_val);

    cout<<"\nAfter replace_if arr[] : ";
    for (int i = 0; i < n; i++)
        cout << ' ' << arr[i];
    return 0;
}
