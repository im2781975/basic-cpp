// using std::replace
#include <bits/stdc++.h>
using namespace std;
 
int main()
{
    int arr[]{ 10, 20, 30, 30, 20, 10, 10, 20 };
    int n = sizeof(arr) / sizeof(arr[0]);
 
    // variable containing the old and new values
    int old_val = 20, new_val = 99;
 
    // print old array
    cout << "Original Array:";
    for (int i = 0; i < n; i++)
        cout << ' ' << arr[i];
    cout << '\n';
 
    replace(arr, arr + n, old_val, new_val);

    cout << "New Array:";
    for (int i = 0; i < n; i++)
        cout << ' ' << arr[i];
    cout << '\n';
 
    return 0;
}
