// demonstrate working of iota()
#include<iostream>
#include<numeric> // for iota()
using namespace std;
int main()
{
    int ar[6] =  {0};
 
    // Using iota() to assign values
    iota(ar, ar+6, 20);
 
    cout << "array after using iota : ";
    for (int i=0; i<6 ; i++)
       cout << ar[i] << " ";
 
    return 0;
 
}
