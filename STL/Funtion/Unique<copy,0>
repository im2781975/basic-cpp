//  std::unique_copy
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
int main()
{
    vector<int> v = { 1, 2, 3, 3, 3, 10, 1, 2, 3, 7, 7, 8 };
 
    vector<int>::iterator ip;
 
    sort(v.begin(), v.end());
    
    vector<int> v1(6);
 
    ip = unique_copy(v.begin(), v.begin() + 12, v1.begin());
    
    cout << "vector v[]: ";
    for (ip = v.begin(); ip != v.end(); ++ip) 
        cout << *ip << " ";

    cout << "\nvector v1[] : ";
    for (ip = v1.begin(); ip != v1.end(); ++ip) 
        cout << *ip << " ";

    if (v == v1) 
        cout << "\nv1 contains only unique elements";
    else
        cout << "\nv1 contains duplicate elements";

    return 0;
}
