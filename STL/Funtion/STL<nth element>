// std::nth_element 
#include <iostream> 
#include <algorithm> 
using namespace std; 
bool comp(int a, int b) 
{ 
    return (a < b); 
} 
int main() 
{ 
    int v[8] = { 3, 2, 10, 45, 33, 56, 23, 47 }, i; 
  
    nth_element(v, v + 4, v + 8); 
    // Since, n is 5 so 5th element should be sorted 
    for (i = 0; i < 8; ++i) { 
        cout << v[i] << " "; 
    } cout<<"\n";
    
    nth_element(v, v + 5, v + 8, comp); 
  
    // Since, n is 6 so 6th element should be the same 
    // as the sixth element present if we sort this array 
    for (i = 0; i < 8; ++i) { 
        cout << v[i] << " "; 
    } cout<<"\n";
    nth_element(v, v + 2, v + 8); 
  
    // Since, n is 3 so now first three numbers will be the 
    // three smallest numbers in the whole array 
    // Displaying first three smallest number 
    for (i = 0; i < 3; ++i)  
    { 
        cout << v[i] << " "; 
    } 
    
    nth_element(v, v + 1, v + 8, std::greater<int>()); 
  
    // Since, n is 2 so first 2 elements will be the largest among all the array elements 
    // Displaying First 2 elements 
    for (i = 0; i < 2; ++i)  
    { 
        cout << v[i] << " "; 
    }
    return 0; 
} 
