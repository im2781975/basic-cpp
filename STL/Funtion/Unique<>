// use of std::unique
#include <algorithm>
#include <iostream>
#include <vector>
using namespace std;
int main()
{
    vector<int> v = { 1, 2, 3, 3, 3, 10, 1, 2, 3, 7, 7, 8 };
 
    vector<int>::iterator ip;
    sort(v.begin(), v.end());
    
    ip =unique(v.begin(), v.begin() + 12);
    
    v.resize(distance(v.begin(), ip));
    cout<<"\nAfter resize : ";
    for (ip = v.begin(); ip != v.end(); ++ip) {
        cout << *ip << " ";
    }
    
    int count =distance(v.begin(), unique(v.begin(), v.begin() + 12));
    cout << "\nTotal no. of unique elements = " << count;
    
    return 0;
}
