#include <iostream>
#include <deque>
#include <algorithm>
using namespace std;
int main() {
    deque<int> dq {10, 5, 20, 15, 30};

    int maxElement = *max_element(dq.begin(), dq.end());

    int minElement = *min_element(dq.begin(), dq.end());

    cout << "Maximum element: " << maxElement ;
    cout << "\nMinimum element: " << minElement ;
    
    reverse(dq.begin(),dq.end());
    cout << "\nReversed Deque: ";
    for (const auto& elem : dq) {
        cout << elem << " ";
    }
    return 0;
}
