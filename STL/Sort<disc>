#include <bits/stdc++.h>
using namespace std;

int main()
{
    int arr[]={9, 1, 0, 4, 2, 8};
    int n= sizeof(arr)/ sizeof(arr[0]);
    vector <int>v (arr,arr+n);

    //sort(arr,arr+n,greater<int>());
    sort(v.begin(), v.end(), greater<int>());
    
    cout<<"After sort: ";
    for(int i= 0;i< n;i++)
    cout<< v[i] <<" ";
}
