//working of shift() and cshift()
#include<iostream>
#include<valarray> 
using namespace std;
int main()
{
    valarray<int> varr{ 10, 2, 20, 1, 30 };
    
    valarray<int> varr1;


    // shifts valarray by 2 position
    varr1 = varr.shift(2);
    
    cout << "\nValarray after shifting is : ";
    for ( int&x : varr1) cout << x << " ";
     
    // cshift() to circularly shift elements to right.rotates valarray by 3 position
    varr1 = varr.cshift(-3);
     
    cout << "\nValarray after circular shifting is : ";
    for ( int&x : varr1) cout << x << " ";
    return 0;
     
}
