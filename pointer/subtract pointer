#include <iostream>
using namespace std;
int main()
{
    int num = 45;
    int* ptr1=&num;
    int* ptr2 = ptr1 + 4;
  
    cout << "Address stored in ptr1:" << ptr1 << endl;
    cout << "Address stored in ptr2:" << ptr2 << endl;
    
    cout << "ptr2 - ptr1 = " << ptr2 - ptr1 << endl;
  
    return 0;
}
