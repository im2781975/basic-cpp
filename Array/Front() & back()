// front() and back()
#include<iostream>
#include<array> 
using namespace std;
int main()
{
    array<int,6> ar = {1, 2, 3, 4, 5, 6};
 
    cout << "First element of array is : ";
    int &a=ar.front();
    cout <<a ;
 
    cout << "\nLast element of array is : ";
    int &b=ar.back();
    cout << b ;
      
    a=10; 
    b=60; 
     
    cout<<"\nArray after updating first and last element :";
    for (auto x: ar)
    {
      cout<<x<<" ";
    }
    return 0;
}
