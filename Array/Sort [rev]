#include<bits/stdc++.h>
using namespace std;

void print_arr(vector<int>& arr, int n) {
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
}

int main() {
    vector<int> arr{7, 1, 3, 9, 0};
    int n = sizeof(arr) / sizeof(arr[0]);

    cout << "\nArray is: ";
    print_arr(arr, n);

    //sort the array
    sort(arr.begin(), arr.end());
    sort(arr.begin() + 0, arr.end() - 2);
    cout << "\nAfter sort array is: ";
    print_arr(arr, n);

    // Reverse the array
    reverse(arr.begin(), arr.end());
    cout << "\nAfter reverse array is: ";
    print_arr(arr, n);

    // Sort after a specific position
    sort(arr.begin() +1, arr.begin() + 2 + 1);
    cout << "\nSort after specific position: ";
    print_arr(arr, n);
}
