#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cout<<"Enter row & col numb: ";
    cin>>n;
    int arr[n+1][n][n];
    for (int i = 0; i < n+1; i++) {
        for (int j = 0; j < n; j++) {
            for (int k = 0; k < n; k++) {
                arr[i][j][k] = i + j + k;
            }
        }
    }
    for (int i = 0; i < n+1; i++) {
        cout << i << "st layer:" << "\n ";
        for (int j = 0; j < n; j++) {
            for (int k = 0; k < n; k++) {
                cout << arr[i][j][k] << " ";
            }
            cout <<"\n";
        }
        cout << "\n";
    }
  
    return 0;
}
