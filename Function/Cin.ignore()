//A program that shows problem if we don't use cin.ignore()
#include <iostream>
using namespace std;
  
int main()
{
    int n;
    cout<<"Enter range: ";
    cin >> n;
    cin.ignore();
    //cin.ignore(1, '\n');
    string s;
    cout<<"Enter string: ";
    for(int i = 0; i<n; ++i)
    {
        getline(cin, s);
        cout << s.length() << " ";
        cout << s << endl;
    }
    return 0;
}
