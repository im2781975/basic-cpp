#include <iostream>
using namespace std;

int main()
{
    int n;
    cout << "Enter range: ";
    cin >> n;
    cin.ignore(1,'\n'); // This line is important to clear the newline character in the input buffer.

    string s;
    cout << "Enter string: ";
    for (int i = 0; i < n; ++i)
    {
        getline(cin, s);
        cout << s.length() << " ";
        cout << s << endl;
    }
    return 0;
}

