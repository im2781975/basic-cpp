//two or more methods in a class have distinct parameters but the same method name, this is known as function overloading
#include <iostream>
using namespace std;
void test(int);
void test(float);
void test(int, float);
void test(char);
int main()
{
    int a = 5;
    float b = 5.5;
    char c='a';
    test(a);
    test(b);
    test(a, b);
    test(c);
 
    return 0;
}
void test(int var)
{
    cout<<"Integer number: "<<var <<"\n";
}
void test(float var)
{
    cout <<"Float number: "<< var <<"\n";
}
void test(int var1, float var2)
{
    cout << "Integer number: " << var1;
    cout << " & float number:" << var2<<"\n";
}
void test(char var)
{
    cout<<"char value: "<<var <<"\n";
}

