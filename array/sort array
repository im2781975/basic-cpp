
/*array is: 7 1 3 9 0 0 
after sort array is: 0 1 3 7 9 0 
after reverse array is: 9 7 3 1 0 0
sort after specific position: 9 3 7 1 0 0 */
#include<bits/stdc++.h>
using namespace std;
void print_arr(vector<int>&arr,int n)
{
    for(int i=0;i<n;i++)
        cout<<arr[i]<<" ";
    cout<<"\n";
}
int main()
{
    vector<int>arr{7,1,3,9,0};
    int n=sizeof(arr)/sizeof(arr[0]);
    cout<<"array is: ";
    print_arr(arr,n);
//---------------------------------
//sort the array
   sort(arr.begin(),arr.end());
   sort(arr.begin()+0,arr.end()-2);
   cout<<"after sort array is: ";
   print_arr(arr,n);
//---------------------------------
//reverse the array
   reverse(arr.begin(),arr.end());
   cout<<"after reverse array is: ";
   print_arr(arr,n);
//--------------------------------
//sort after specific position
   sort(arr.begin()+1,arr.begin()+2+1);
   cout<<"sort after specific position: ";
   print_arr(arr,n);
}
