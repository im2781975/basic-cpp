#include  <bits/stdc++.h>
using namespace std;
#define NAME_LEN 60 
#define ADDRESS_LEN 120 
#define ABOUT_LEN 250
int main () {
  char y_name[NAME_LEN], y_address[ADDRESS_LEN], about_y[ABOUT_LEN];
  
  cout << "Enter your name: ";
  cin.getline (y_name,NAME_LEN);
  
  cout << "Enter your City: ";
  cin.getline (y_address, ADDRESS_LEN);
  
  cout <<"Enter your profession :";
  cin.getline (about_y,ABOUT_LEN);
  
  cout <<"\tDetails are: "<<"\n";
  cout<<"Name: " << y_name << "\n";
  cout<<"Address: "<<y_address<<"\n";
  cout<<"Profession is: "<<about_y <<"\n";
}
