#include<bits/stdc++.h>
using namespace std;
int main()
{
    char str[] = "GeeksforGeeks";
  //char chr = 'k';
    char chr = 'z';
 
  //char* ptr = strrchr(str, chr);
    char* ptr = strrchr(str, chr);
    if (ptr) {
        cout<<"Last occurrence of '"<<chr<<"'in "<< str<<" is at idx " <<ptr-str;
    }
    else 
    {
        cout<<"'"<<chr<<"' isn't present in "<<str;
    }
    return 0;
}
