#include<bits/stdc++.h>
using namespace std;
int main()
{
    char s1[] = "GeeksforGeeks";
    char s2[] = "for";
    char* result;
 
    result = strstr(s1, s2);
  
    if (result != NULL) 
    {
        cout<<"Substring found :"<<
        result<<"\n";
    }
    else {
        printf("Substring not found.\n");
    }
//--------------------------------
    string str = "Geeks";
//Copy two characters of s1 (starting from position 3)
    string r = str.substr(3, 2);
    cout << "String is: "<<r<<"\n";
    // Take any string
//---------------------------------
    string s = "dog:cat";
    int pos = s.find(":");
    // Copy substring after pos
    string sub1 = s.substr(pos + 1);
    string sub2 = s.substr(0, pos);
    cout<<"after colone String is: "<<sub1<<"\n";
    cout<<"before colone String is: "<<sub2<<"\n";
    return 0;
}
