#include<bits/stdc++.h>
using namespace std;
int i;
vector<int>merge_sort(vector<int>a)
{
    if (a.size()<=1)
    return a;
    
    int mid=a.size()/2;
    vector<int>b;
    vector<int>c;
    for(i=0;i<mid;i++)
    b.push_back(a[i]);
    for(i=mid;i<a.size();i++)
    c.push_back(a[i]);
    
    vector<int>sorted_b=merge_sort(b);
    vector<int>sorted_c=merge_sort(c);
    vector<int>sorted_a;
    int idx1=0,idx2=0;
    for(i=0;i<a.size();i++)
    {
        if(idx1==sorted_b.size())
        {
          sorted_a.push_back(sorted_c[idx2]);
            idx2++;
        }
        else if(idx2==sorted_c.size())
        {
           sorted_a.push_back(sorted_b[idx1]);
            idx1++;
        }
        else if(sorted_b[idx1]<sorted_c[idx2])
        {
            sorted_a.push_back(sorted_b[idx1]);
            idx1++;
        }
        else
        {
            sorted_a.push_back(sorted_c[idx2]);
            idx2++;
        }
    }
    for(i=0;i<sorted_a.size();i++)
    {
        cout<<sorted_a[i]<<" ";
    }
    cout<<"\n"<<"\n";
    return sorted_a;
}
int main()
{
    vector<int>a={4,3,5,8,1,6};
    vector<int>ans=merge_sort(a);
    for(i=0;i<ans.size();i++)
    {
        cout<<ans[i]<<" ";
    }
}
