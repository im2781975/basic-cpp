// sorting of descending order
#include<iostream>
#include<vector>
#include<algorithm> 
using namespace std;
 
//sort the 2D vector on basis of a no. of columns in descending order
bool sizecom(const vector<int>& v1, const vector<int>& v2)
{
    return v1.size() > v2.size();
}
 
int main()
{
    vector< vector<int> > vect{{1, 2},{3, 4, 5},{6}};
 
    cout<<"Matrix before sorting: ";
    for (int i=0; i<vect.size(); i++)
    {
        cout<< "\n";
        for (int j=0; j<vect[i].size() ;j++)
            cout<<vect[i][j]<< " ";
    }
 
    //sorting on basis of no. of columns in descending order.
    sort(vect.begin(), vect.end(), sizecom);
 
    cout<<"\nMatrix after sorting : ";
    for (int i=0; i<vect.size(); i++)
    {
        cout<< "\n";
        for (int j=0; j<vect[i].size() ;j++)
            cout <<vect[i][j] <<" ";
    }
    return 0;
}
