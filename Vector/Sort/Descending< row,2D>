// Sorting of a row of 2D vector
#include <algorithm> 
#include <iostream>
#include <vector> 
using namespace std;
 
int main()
{
    vector<vector<int> > vect{{3, 5, 1},{4, 8, 6},{7, 2, 9 }};
    // Number of rows;
    int m = vect.size();
 
    // Number of columns
    int n = vect[0].size();
 
    cout << "Before sorting 1st row is:";
    for (int i = 0; i < m; i++) {
        cout<< "\n" ;
        for (int j = 0; j < n; j++)
            cout <<vect[i][j]<<" ";
    }
 
    // Use of "sort()" for sorting first row
    sort(vect[0].begin(), vect[0].end());
 
    cout <<"\nAfter sorting 1st row is: ";
    for (int i = 0; i < m; i++) {
         cout<< " \n" ;
        for (int j = 0; j < n; j++)
            cout <<vect[i][j]<<" ";
    }
 
    return 0;
}
