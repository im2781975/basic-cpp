//Sorting on basis of a column in descending order
#include<iostream>
#include<vector> 
#include<algorithm> 
using namespace std;

bool sortcol( const vector<int>& v1, const vector<int>& v2 ) {
    return v1[1] > v2[1];
}
  
int main()
{
    vector< vector<int> >vect{{3, 5, 1},{4, 8, 6}, {7, 2, 9}};
    //number of rows
    int m = vect.size();
  
    // Number of columns 
    int n = vect[0].size();
      
    cout << "Before sorting : ";
    for (int i=0; i<m; i++)
    {
        cout<< "\n" ;
        for (int j=0; j<n ;j++)
            cout<<vect[i][j]<< " ";
    }                       
    // Use of "sort()" for sorting on basis
    // of 2nd column in descending order
    sort(vect.begin(), vect.end(),sortcol);
 
    cout << "\nAfter sorting is:";
    for (int i=0; i<m; i++)
    {
        cout<< " \n" ;
        for (int j=0; j<n ;j++)
            cout<<vect[i][j] << " ";
    }
    return 0;
}
