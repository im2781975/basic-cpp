#include <bits/stdc++.h>
using namespace std;

void print(int* x) {
    *x = 2300;
}

void print_pointer() {
    int a = 10;
    int *ptr = &a;
    print(ptr);
    cout << "Pointer value is: "<<a;
}

void print_arr_pointer() {
    int* ptr = new int[10]{2, 3, 6, 8, 9};
    cout<<"\nArray pointer value is: ";
    for (int i = 0; i < 10; i++) {
        cout << ptr[i] << " ";
    }
    delete[] ptr;
}

void sort_arr() {
    int n[] = {2, 4, 1, 5, 6};
    int x = 5;
    int tmp;
    for (int i = 0; i < x - 1; i++) {
        for (int j = i + 1; j < x; j++) {
            if (n[i] > n[j]) {
                tmp = n[i];
                n[i] = n[j];
                n[j] = tmp;
            }
        }
    }
    cout << "\nAfter sort minimum is: "<<n[x - 1];
}

void find_minimum() {
    int ar[] = {2, 1, 3, 6, 9};
    int mn = ar[0];
    for (int i = 0; i < 5; i++) {
        mn = min(ar[i], mn);
    }
    cout <<"\nMinimum value is: "<< mn;
}

int main() {
    print_pointer();
    
    print_arr_pointer();

    sort_arr();
    
    find_minimum();

    return 0;
}
