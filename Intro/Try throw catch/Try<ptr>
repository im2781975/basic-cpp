
//the function should specify all uncaught exceptions and function signature should be "void fun(int *ptr, int x) throw (int *, int)".
#include <iostream>
using namespace std;
 
void fun(int *ptr, int x)
{
    if (ptr == NULL)
        throw ptr;
    if (x == 0)
        throw x;
}
int main()
{
    try {
       fun(NULL,0);
    }
    catch(...) {
        cout << "Caught exception from fun()";
    }
    return 0;
}
