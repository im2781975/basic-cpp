#include <iostream>

void int_allocation()
{
    int x = 10;
    std::cout << &x << "\n";
    std::cout << x << "\n";
}

void array_allocation()
{
    int n;
    std::cout << "Enter the size of the array: ";
    std::cin >> n;

    if (n <= 0) {
        std::cout << "Invalid array size.\n";
        return;
    }

    int *x = new int[n];

    if (x == nullptr) {
        std::cout << "Memory allocation failed.\n";
        return;
    }

    for (int i = 0; i < n; i++)
        std::cin >> x[i];

    for (int i = 0; i < n; i++)
        std::cout << x[i] << "\n";

    delete[] x;
}

int main()
{
    int_allocation();
    array_allocation();
    return 0;
}

