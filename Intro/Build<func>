/*Enter elements: 6 1 9 3
after swap : 1 6
maximum is: 9
minimum is: 1 */
#include<bits/stdc++.h>
using namespace std;
int main()
{
    int a,b,c,d;
    cout<<"Enter elements: ";
    cin>>a>>b>>c>>d;
    //swap 
    swap(a,b);
    cout<<"after swap : "<<a<<" "<<b<<"\n";
    //maximum 
    int maximum=max({a,b,c,d});
    cout<<"maximum is: "<<maximum<<"\n";
    //minimum
    int minimum=min({a,b,c,d});
    cout<<"minimum is: "<<minimum<<"\n";
}
