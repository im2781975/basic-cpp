//find the largest of the three number using use of ternary operator 
#include <iostream> 
using namespace std; 
  
int main() 
{ 
    int num, test = 40; 

    num = test < 10 ? 10 : test + 10; 
  
    printf("Num - Test = %d", num - test); 
  
    int A = 39, B = 10, C = 23; 
  
    // Evaluate largest of three using ternary operator 
    int maxNum 
        = (A > B) ? ((A > C) ? A : C) : ((B > C) ? B : C); 
    cout << "\nLargest number is " << maxNum << endl; 
  
    return 0; 
}
