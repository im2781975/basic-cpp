// reinterpret_cast 
#include <iostream> 
using namespace std; 
  
int main() 
{ 
    int number = 10;
    int* numberPointer = &number; 
  
    // Reinterpreting the pointer as a char pointer 
    char* charPointer 
        = reinterpret_cast<char*>(numberPointer); 
    double* doublePointer=reinterpret_cast<double*>(doublePointer);
    
    cout << "Integer Address: " << numberPointer << endl; 
    cout << "Char Address: "
         << reinterpret_cast<void*>(charPointer) << endl; 
    cout<<"Double pointer: "<<doublePointer<<endl;
  
    return 0; 
}
